---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'

import { HamburgerMenu } from './HumbugerMenu.jsx'
const links = [
  { href: '/', label: 'トップ' },
  { href: '/about', label: 'アバウト' },
  { href: '/contact', label: 'お問合せ' },
]
---

<header>
  <h2>
    {SITE_TITLE}
  </h2>
  <nav>
    <div class="hamburgerMenu">
      <HamburgerMenu links={links} client:load />
    </div>
  </nav>
</header>
<style>
  header {
    background-color: blanchedalmond;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px;
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
  .hamburgerMenu {
    display: none;
  }
  @media screen and (max-width: 768px) {
    .hamburgerMenu {
      display: block;
    }
    .links {
      display: none;
    }
  }
</style>
